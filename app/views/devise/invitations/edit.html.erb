<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Set your password</h2>

  <%= form_for(resource, :as => resource_name, :url => invitation_path(resource_name)) do |f| %>
    <%= f.hidden_field :invitation_token %>
    <% f.hidden_field :account_id, :value => 11 %>

    <%= form_group_for f, :password do %>
      <div class="input-group">
        <%= f.password_field :password, class: 'form-control input-lg', placeholder: 'Password' %>
        <span class="input-group-addon glyphicon glyphicon-lock"></span>
      </div>
      
      <%= form_group_for f, :password_confirmation do %>
        <div class="input-group">
          <%= f.password_field :password_confirmation, class: 'form-control input-lg', placeholder: 'Confirm Password' %>
          <span class="input-group-addon glyphicon glyphicon-lock"></span>
        </div>
    <% end %>

    <% end -%>

    <div><%= f.submit "Set my password", class: 'btn btn-primary btn-block btn-lg' %></div>
  <% end %>

  <%= flash_messages layout_flash: false %>

</div>


