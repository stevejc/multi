<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Set your password</h2>

  <%= form_for(resource, builder: LargeFormBuilder, :as => resource_name, :url => invitation_path(resource_name)) do |f| %>
    <%  f.hidden_field :invitation_token %>
    <% f.hidden_field :account_id, :value => 11 %>
    <%= f.password_field :password, gicon: "lock", class: 'form-control input-lg', placeholder: 'Password' %>      
    <%= f.password_field :password_confirmation, gicon: "lock", class: 'form-control input-lg', placeholder: 'Confirm Password' %>
    <%= f.submit "Set my password", class: 'btn btn-primary btn-block btn-lg' %>
  <% end %>

  <%= flash_messages layout_flash: false %>

</div>


