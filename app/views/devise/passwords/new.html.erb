<div class="col-md-6 col-md-offset-3 well signin">
  <h2>Forgot your password?</h2>

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= form_group_for f, :email do %>
      <div class="input-group">
        <%= f.email_field :email, class: 'form-control input-lg', placeholder: 'Email' %>
        <span class="input-group-addon glyphicon glyphicon-user"></span>
      </div>
    <% end %>

    <div><%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block btn-lg' %></div>
  <% end %>

  <%= flash_messages layout_flash: false %>

  <%= render "devise/shared/links" %>
</div>
