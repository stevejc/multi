<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <h2>Update your account info</h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

      <%= form_group_for f, :name do %>
          <%= f.text_field :name, class: 'form-control', autofocus: true %>
      <% end %>
      
      <%= form_group_for f, :email do %>
          <%= f.text_field :email, class: 'form-control' %>
      <% end %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      
      <%= form_group_for f, :password do %>
          <%= f.password_field :password, class: 'form-control', :autocomplete => "off" %>
      <% end %>
      
      <%= form_group_for f, :password_confirmation do %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
      <% end %>
      
    
      <%= form_group_for f, :current_password do %>
          <%= f.password_field :current_password, class: 'form-control' %>
      <% end %>

    
      <%= f.submit "Update Account", class: 'btn btn-primary' %>
    <% end %>
<br>
    <%= form_tag change_account_path, :class => "row" do %> 
      <div class="col-xs-8">
        <%= collection_select :user_account, :id, current_user.user_accounts.map { |x| OpenStruct.new(:id => x.account_id, :name => x.account.name) }, :id, :name, {prompt: "Select an account"}, {class: "form-control"}  %>
      </div>
      <%= submit_tag "Select Account", class: "btn btn-large btn-primary" %>
      
    <% end %>
        <div>
    <%= link_to "  Add another account", add_account_path(:plan => 'gold') %>
    </div>
  </div>
</div>



