<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <%= render 'layouts/error' %>
    <h2>Edit a Client</h2>
    <%= form_for @client, builder: BasicFormBuilder do |f| %>
      <%= f.text_field :name, label: "Client Name", autofocus: true %>
      <%= f.text_area :address %>
      <div class="form-actions">
        <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', @client, :class => 'btn' %>
        <%= link_to ' Delete', client_path(@client), data: {confirm: 'Are you sure you want to delete this client, no take backsies?'}, method: :delete, :class => 'btn float_right' %>
      </div>
    <% end %>
  </div>
</div>

