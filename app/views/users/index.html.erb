<div class="col-md-8 col-md-offset-2">
  <h2>Authorized Users</h2>

  <div class="panel panel-default">
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.email %></td>
              <td><%= user_status(user) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <h3 class="extra-margin-top">Invite User</h3>

    </div>
  </div>
</div>