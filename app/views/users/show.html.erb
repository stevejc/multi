<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">

    <%= render 'layouts/error' %>
    <h2>View User</h2>
    <p><%= @user.name %></p>
    <p><%= @user.email %></p>
   
    <table class="table table-hover">
    <h4>Access Permissions </h4>
      <tr>
        <th>Admin</th>
        <th>Billing Liaison</th>
        <th>Account Owner</th>
      </tr>

      <tr>
        <td><%= user_access(@user_account.admin) %></td>
        <td><%= user_access(@user_account.billing) %></td>
        <td><%= user_access(current_account.owner_id == @user.id) %></td>
      </tr>

    </table>

    <%= link_to 'Edit', edit_user_path(@user), :class => 'btn' %>
    <%= link_to 'Back', users_path, :class => 'btn' %>
  </div>
</div>