<div class="col-md-6 col-md-offset-3 panel panel-default">
  <div class="panel-body">
    <%= render 'layouts/error' %>
    <h2>Edit a user</h2>
      <%= form_for @user do |f| %>
        <%= form_group_for f, :name, opts= {:label => "Name"} do %>
            <%= f.text_field :name, class: 'form-control' %>
        <% end %>
        <%= form_group_for f, :email do %>
            <%= f.text_field :email, class: 'form-control' %>
        <% end %>
        <h4>Account Permissions</h4>
        <%= f.fields_for :user_accounts, @user_account do |o| %>
          <div class="checkbox">
            <%= o.check_box :admin %> Admin
          </div>
          <div class="checkbox">
            <%= o.check_box :billing %> Billing
          </div>
        <% end %>
    <div class="form-actions">
      <%= f.submit class: 'btn btn-primary' %>
        <%= link_to 'Cancel', @user, :class => 'btn' %>
        <%= link_to ' Delete', user_path(@user), confirm: 'Are you sure you want to delete this client, no take backsies?', method: :delete, :class => 'btn float_right' %>
      <% end %>
    </div>
  </div>
</div>

